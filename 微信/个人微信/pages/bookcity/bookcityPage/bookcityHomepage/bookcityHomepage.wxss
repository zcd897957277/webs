/* 猜你喜欢中的detail novel */
.detailNovel{
  border-top: 3rpx solid #f7fbfa;
  padding:27rpx 0;
}
.detailNovel_img{
  width: 228rpx;
  height: 322rpx;
  padding-right: 30rpx;
  padding-left: 27rpx;
  float: left;
}
.detailNovel_content{
  float: left;
  width: 58%;
}
.detailNovel_name{
  color:#323232;
  font-weight: 600;
  display: block;
  padding-top: 20rpx;
  font-size:31rpx;
}
.detailNovel_author{
  color:#858b89;
  display: block;
  padding-top: 40rpx;
  font-size:31rpx;
}
.detailNovel_content_det{
  color:#858b89;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  padding-top: 46rpx;
  font-size:31rpx;
}
/* 猜你喜欢中小说简单版 */
.simpleNovel{
  border-top: 3rpx solid #f7fbfa;
  padding:27rpx 0;
}
.simpleNovel_name{
  color:#323232;
  font-weight: 600;
  padding:0 33rpx 30rpx 33rpx;
  display: block;
  font-size:31rpx;
}
.simpleNovel_content{
  width: 93%;
  padding:0 33rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  color:#858b89;
  font-size:31rpx;
}
/* 热销爽文 */
.rexiaoshuangwen_par,.rexiaojiazuo_par,.nvshenghaowen_par,.zhubianlijian_par,.nanpinrexiaobang_par{
