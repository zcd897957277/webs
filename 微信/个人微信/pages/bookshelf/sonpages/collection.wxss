/* pages/bookshelf/sonpages/collection.wxss */
.bookshelf-nav{
  height: 126rpx;
  background-color:#fff;
  text-align: center;
  padding:0 54rpx;
  position: fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
}
.trans-button{
  display: inline-block;
}
.button-default{
  border:1px solid #6caefc;
  background-color: #fff;
  color: #6caefc;
  width: 250rpx;
  display: inline-block;
  height: 86rpx; 
  margin-top: 20rpx;
  line-height:68rpx !important;
  border-radius:7px;
}
/** 添加自定义button点击态样式类**/
.button-hoverr {
  background-color: #6caefc;
  color:#fff;
}
.vb1{
  border-right: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.vb2{
  border-left: 0;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
button::after{
  display:none !important;
}
.bookshelf-management{
  color: #030303;
  float:right;
  margin-top:6%;
}
/* 正文 */
.main{
  padding:120rpx 30rpx 42rpx 30rpx;
  text-align: center;
}
.main_img{
  width: 297rpx;
  height: 459rpx;
  padding-bottom: 20rpx;
}
.main>text{
  display: block;
  color: #85898a;
}